source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '~> 5.0.7'

# Use sqlite3 as the database for Active Record
gem 'sqlite3'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Os turbolinks tornam a navegação no seu aplicativo da web mais rápida. Leia mais: https://github.com/turbolinks/turbolinks
gem 'turbolinks', '~> 5'

# Para evitar erro que indica que o TZInfo não conseguiu encontrar uma fonte de dados de fuso horário no seu sistema
gem 'tzinfo-data'

# bootstrap
gem 'twitter-bootstrap-rails'

# internacionalização de mensagens
gem 'rails-i18n', '~> 5.1'